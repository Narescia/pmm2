<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.anaval.examenanatorres.AcercaDe">

    <TextView
        android:text="Versión: 1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/version"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:text="Ana Torres Valencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ana"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:layout_below="@+id/version"/>

    <TextView
        android:text="Compañía: IES Serpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compania"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:layout_below="@+id/ana"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />



    </RelativeLayout>
